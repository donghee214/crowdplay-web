{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "root": ["src"],
      "root/*": ["src/*"],
      "shared": ["src/shared"],
      "shared/*": ["src/shared/*"],
      "assets": ["src/assets"],
      "assets/*": ["src/assets/*"],
      "features/*": ["src/features/*"]
    },
    "rootDirs": ["src"]
  },
  "include": ["src"]
}
